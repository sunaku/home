# this file was generated from <%= __FILE__ %> by ~/makefile

<% if ENV['THEME'] == 'dark' %>
color cursor black green
color title-blur black blue
color title-focus black blue
<% end %>

# use author date (not commit date) in main view
# https://github.com/jonas/tig/issues/294
set main-view = date:default,use-author=yes author:full commit-title:yes,graph,refs=yes,overflow=yes

# http://who-t.blogspot.com/2009/04/git-format-patch-for-single-commit.html
bind generic P !git format-patch -1 %(commit)

bind generic R !git revert %(commit) --no-edit

bind generic B !git rebase -i %(commit)^ --rebase-merges

bind generic Y !sh -ec "echo %(commit) | yank"

bind generic T !sh -ec "printf 'tag: '; git tag $(head -1) %(commit)"

bind generic O !git checkout %(commit)
