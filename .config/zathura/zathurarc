set font                    "Monospace 9"
set guioptions              ""
set pages-per-row           2
set first-page-column       1:1
set window-title-basename   true
set window-title-page       true

set recolor true
set recolor-keephue true
# Colors from Solarized theme for Vim:
# https://ethanschoonover.com/solarized/
set recolor-darkcolor  "#93a1a1" # Base1
set recolor-lightcolor "#073642" # Base02

map <C-Home>    goto     top
map <Home>      scroll   page-top
map <A-Up>      scroll   page-top
map <PageUp>    scroll   full-up
map <BackSpace> scroll   half-up
map <S-Space>   scroll   half-up
map <Space>     scroll   half-down
map <PageDown>  scroll   full-down
map <A-Down>    scroll   page-bottom
map <End>       scroll   page-bottom
map <C-End>     goto     bottom
map [           navigate previous
map ]           navigate next
