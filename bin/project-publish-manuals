#!/bin/sh -ex
# Publishes manuals to the GitHub pages website after a project release.

trap 'git checkout master' EXIT
bundle exec rake binman
rsync -La man/ man-publish/ --delete # resolve symlinks inside man/man0/
git clean -fd man/
git checkout gh-pages
rm -rf man
mv man-publish man
git add man
git commit -c master --no-edit
git push
