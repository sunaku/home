! vim:filetype=xdefaults:
<% light_theme = ENV['THEME'] == 'light' %>

*font                    : -*-tamzen-medium-r-*-*-16-*-*-*-*-*-*-*
Xft.dpi                  : 116

! enable colors in native X applications
#ifdef COLOR
*customization           : -color
#endif

! choose color scheme to use in terminals
<% if light_theme %>
